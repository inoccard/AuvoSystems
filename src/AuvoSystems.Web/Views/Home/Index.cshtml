@model AuvoSystems.Web.Models.DepartamentoModel;

@{
    ViewData["Title"] = "Home Page";
}

<section>
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>

    <div class="container">
        <div class="row">
            <form asp-controller="Home" asp-action="GerarOrderPagamento" method="post">
                <h2>Selecione a pasta para importar os arquivos</h2>

                <input type="file" name="datafile" multiple>

                <button type="submit" class="btn btn-primary">
                    <span class="text">Gerar Ordem</span> <i class="fas fa-shopping-cart"> &nbsp;</i>
                </button>
            </form>
        </div>
    </div>
</section>
